<div class="container my-3 d-flex bg-dark text-light rounded-3 justify-content-between align-items-center p-1">
    <h3><%=payment.name %></h3>
    <div class= 'd-flex flex-column'>
      <p>Amount spent: <%=payment.amount%></p> 
      <p>Date: <%=payment.created_at.strftime('%m-%d-%Y %H:%M')%></p>
    </div>
    <%= button_to category_payment_path(category_id: params[:id], id: payment.id), method: :delete, class: 'btn icon' do%>
      <i class="fa fa-trash text-danger fs-2"></i>
    <%end%>
</div>
