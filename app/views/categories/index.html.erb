<section class='d-flex flex-column m-0'>
  <div class='d-flex justify-content-between align-items-center bg-primary p-3'>
    <h2 class='display-5 text-white'>Categories</h2>
    <%= link_to "New category", new_category_path, class: 'btn btn-success' %>
  </div>

  <div class="container my-3">
    <div class="row row-cols-2 row-cols-sm-2 row-cols-md-4">
      <% @categories.each do |category| %>
        <div class="col">
          <%= link_to category, class: 'link text-dark' do %>
            <%= render partial: 'shared/category', locals: {category: category}%>
          <%end%>
        </div>
      <% end %>
    </div>
  </div>

</section>
